    function showGreeting() {
      const greetings = [
        "–õ—é–±–æ–≤—å –∏ —â–µ–ø–æ—Ç–∫–∞ –¥—É—à–∏ üåû",
        "–ü–µ—Å–Ω—è –∫–æ—Ä–µ–π—Å–∫–æ–π –±–∞–±—É—à–∫–∏ ‚ú®",
        "–ì–ª—É—Ç–∞–º–∞—Ç –Ω–∞—Ç—Ä–∏—è",
        "–í–∞—à–∞ —É–ª—ã–±–∫–∞ üòä",
        "–ö–æ—Ä–µ–π—Å–∫–∏–µ –≥–µ–Ω—ã"
      ];

      const randomGreeting = greetings[Math.floor(Math.random() * greetings.length)];
      const el = document.getElementById("greeting-message");

      // –û–±–Ω–æ–≤–ª—è–µ–º —Ç–µ–∫—Å—Ç –∏ –ø–µ—Ä–µ–∑–∞–ø—É—Å–∫–∞–µ–º –∞–Ω–∏–º–∞—Ü–∏—é
      el.textContent = randomGreeting;
      el.classList.remove("show");
      void el.offsetWidth; // —Ñ–æ—Ä—Å–∏—Ä—É–µ–º —Ä–µ—Ñ–ª–æ—É
      el.classList.add("show");
    }
  </script>
